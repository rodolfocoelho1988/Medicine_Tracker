{% extends '::base.html.twig' %}

{% block body -%}

    <script>
        $(document).ready(function () {
            $('#patientTable').DataTable( {
                "scrollY":        "300px",
                "scrollCollapse": true,
                "paging":         false,

                dom: 'Bfrtip',
                buttons: [
                    'copy',
                    {
                        extend: 'pdfHtml5',
                        title: 'Pharmacy Information',
                        exportOptions: {
                            columns: [0,1]
                        }
                    },
                    {
                        extend: 'csvHtml5',
                        title: 'Pharmacy Information',
                        exportOptions: {
                            columns: [0,1]
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        title: 'Pharmacy Information',
                        exportOptions: {
                            columns: [0,1]
                        }
                    }
                ]
            } );
        });
    </script>

    <h1>Patient list</h1>

    <button id="showActive" class="btn btn-info">Show active</button>
    <button id="showInactive" class="btn btn-danger">Show Inactive</button>
    <button id="showAll" class="btn btn-success">Show all</button>
    <br>
    <br>

    <div class="container">
        <table class="table table-striped table-bordered active_inactive" id="patientTable">
            <thead class="thead-inverse">
                <tr class="Active Inactive">
                    <th>Name</th>
                    <th>Is Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
        
            <tbody>
            {% for entity in entities %}
                    {% if entity.isActive == 1 %}
            <tr class="Active">
                        {% else %}
                <tr class="Inactive">
                    {% endif %}
                    <td>{{ entity.name }}</td>

                    <td>{% if entity.isActive == 1 %}
                            <p>Y</p>
                        {% else %}
                            <p>N</p>
                        {% endif %}
                    </td>

                    <td>
                        <a href="{{ path('patient_show', { 'id': entity.id }) }}" class="btn btn-info" role="button">show</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
                <a href="{{ path('patient_new') }}" class="btn btn-info" role="button">Create a new entry</a>

    <script>
        var rows = $('table.active_inactive tr');

        $('#showActive').click(function() {
            rows.filter('.Active').show();
            rows.not( '.Active' ).hide();
        });

        $('#showInactive').click(function() {
            rows.filter('.Inactive').show();
            rows.not( '.Inactive' ).hide();
        });

        $('#showAll').click(function() {
            rows.show();
        });
    </script>

{% endblock %}
