{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container-fluid">
        {% if isActive == 1 %}
            <h1>Patient list<small> non-deleted patients</small></h1>
        {% else %}
            <h1>Patient list<small> deleted patients</small></h1>
        {% endif %}
        

        <table class="table" > <!-- removed this class: record_tables  -->
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
        
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.name }}</td>

                    <td>
                        <a href="{{ path('patient_show', { 'id': entity.id }) }}" class="btn btn-info" role="button">show</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
                <a href="{{ path('patient_search') }}" class="btn btn-info" role="button">Search</a>
                <a href="{{ path('patient') }}" class="btn btn-info" role="button"> Back to the list</a>
    </div>
{% endblock %}