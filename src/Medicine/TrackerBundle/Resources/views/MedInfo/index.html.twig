{% extends '::base.html.twig' %}

{% block body -%}
    <h1>MedInfo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Preparedon</th>
                <th>Numblisters</th>
                <th>Deliverypickupdate</th>
                <th>Nextduedate</th>
                <th>Isactive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('medinfo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.preparedOn %}{{ entity.preparedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.numBlisters }}</td>
                <td>{% if entity.deliveryPickupDate %}{{ entity.deliveryPickupDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.nextDueDate %}{{ entity.nextDueDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isActive }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('medinfo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('medinfo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('medinfo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
